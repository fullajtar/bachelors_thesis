<!DOCTYPE html>
<html lang="sk">

<head>
    <meta charset="utf-8">
    <title>Auth</title>
</head>

<body>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css"/>
<!--<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>-->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<table id="fancyTable">
    <thead>
    <tr>
        <th>Číslo</th>
        <th>Dátum vzniku</th>
        <th>Názov</th>
        <th>Suma</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
        {{#if this.id}}
            <tr onclick="redirect('/expense/{{this.id}}')" class="hover:bg-gray-300 cursor-pointer text-center">
                <td>{{this.id}}</td>
                <td>{{this.expenseDate}}</td>
                <td>{{this.expenseName}}</td>
                <td>{{this.expenseAmount}}</td>
            </tr>
        {{/if}}
    {{/each}}
    </tbody>
</table>
<a class="myButtonStyle" href="/expense/create">Vytvor Výdavok</a>
</body>
<script>$(document).ready(function() {
    $('#fancyTable').DataTable({
        "language":{
            url: "https://cdn.datatables.net/plug-ins/1.10.24/i18n/Slovak.json"
        },
        lengthMenu: [20,25,50,100]
    });
});

function redirect(path){
    window.location.href = path;
}
</script>
</html>