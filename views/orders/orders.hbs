<aside class="col-span-3 md:col-span-2">
    {{> navigation}}
</aside>

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css"/>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

<main class="col-span-9 md:col-span-10 p-6">
<table id="fancyTable">
    <thead>
    <tr>
        <th>Číslo</th>
        <th>Dátum vystavenia</th>
        <th>Zákazník</th>
        <th>Zákazka</th>
        <th>Suma <p class="font-light text-xs inline">bez DPH</p></th>
        <th>Tag</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
        {{#if this.id}}
            <tr onclick="redirect('/order/{{this.id}}')" class="hover:bg-gray-300 cursor-pointer text-center">
                <td>{{this.id}}</td>
                <td> {{dateParse this.dateOfIssue}} </td>
                <td>{{this.customerDegreeBefore}} {{this.customerName}} {{this.customerSurname}} {{this.customerDegreeAfter}}</td>
                <td>{{this.name}}</td>
                <td>{{priceWithoutTax this}}</td>
                <td>{{this.tag}}</td>
            </tr>
        {{/if}}
    {{/each}}
    </tbody>

</table>
<fm-button class="block mt-4" onclick="redirect('/order/create')">Vytvor Objednávku</fm-button>
</main>

<script src="/initDatatables.js"></script>
<script src="/redirectFunction.js"></script>